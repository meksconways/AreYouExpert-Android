<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="8dp"
    android:paddingEnd="16dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/txtCategoryOnBoardProgressTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Progress: 40%"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />

    <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
        android:id="@+id/prCategoryOnProgress"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        app:rcBackgroundColor="@color/catArtPrimaryColor"
        app:rcBackgroundPadding="0dp"
        app:rcMax="10"
        app:rcProgress="7"
        app:rcProgressColor="@color/catArtDarkColor"
        app:rcRadius="16dp"
        app:rcReverse="false"
        app:rcSecondaryProgress="7"
        app:rcSecondaryProgressColor="@color/catArtLightColor" />

</LinearLayout>